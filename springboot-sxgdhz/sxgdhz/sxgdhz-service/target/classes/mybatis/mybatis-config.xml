<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

	<settings>
		<setting name="lazyLoadingEnabled" value="true" />
		<setting name="aggressiveLazyLoading" value="false" />
	</settings>
	<typeAliases>
		<typeAlias type="pers.zb.center.service.user.vo.sys.UserVo" alias="UserVo" />
		<typeAlias type="pers.zb.center.service.user.vo.sys.RoleVo" alias="RoleVo" />
		<typeAlias type="pers.zb.center.service.user.vo.sys.PermissionVo" alias="PermissionVo" />
		<typeAlias type="pers.zb.center.service.user.vo.sys.AppVo" alias="AppVo" />
		<typeAlias type="pers.zb.center.service.user.vo.record.AccessStatisticsVo" alias="AccessStatisticsVo" />

		<typeAlias type="pers.zb.center.service.user.entity.basic.BasicMessageWall" alias="BasicMessageWall" />
		<typeAlias type="pers.zb.center.service.user.entity.sys.SysPermission" alias="SysPermission" />
		<typeAlias type="pers.zb.center.service.user.entity.sys.SysRole" alias="SysRole" />
		<typeAlias type="pers.zb.center.service.user.entity.sys.SysUser" alias="SysUser" />
		<typeAlias type="pers.zb.center.service.user.entity.activiti.LeaveApply" alias="LeaveApply" />
	</typeAliases>
    
    <!-- 下面的配置，主要作用是：
                1、对于实体bean中枚举类型的属性，在进行数据库相关crud操作的时候，可以进行表字段值的映射。
                2、所以，在新增枚举类的时候，记得务必在这里配置一下。
    -->
	<typeHandlers>
		<typeHandler handler="pers.zb.center.common.core.enums.entity.EntityEnumTypeHandler" javaType="pers.zb.center.common.core.enums.Status" />
		<typeHandler handler="pers.zb.center.common.core.enums.entity.EntityEnumTypeHandler" javaType="pers.zb.center.service.user.enums.UserStatus" />
		<typeHandler handler="pers.zb.center.common.core.enums.entity.EntityEnumTypeHandler" javaType="pers.zb.center.service.user.enums.OnlineStatus" />
		<typeHandler handler="pers.zb.center.common.core.enums.entity.EntityEnumTypeHandler" javaType="pers.zb.center.service.user.enums.activiti.LeaveType" />
		<typeHandler handler="pers.zb.center.common.core.enums.entity.EntityEnumTypeHandler" javaType="pers.zb.center.service.user.enums.MenuType" />
	</typeHandlers>

</configuration>